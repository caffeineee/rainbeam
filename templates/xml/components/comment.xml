<entry type="comment">
    <id>{{ comment.0.id }}</id>
    
    <author>
        {% let user = comment.0.author.clone() %}
        {% include "xml/components/user.xml" %}
    </author>
  
    <content type="text/markdown">{{ comment.0.content }}</content>
    <timestamp>{{ comment.0.timestamp }}</timestamp>
    <replies>{{ comment.1 }}</replies>
    <reactions>{{ comment.2 }}</reactions>

    <link rel="alternate" type="text/html" href="{{ config.host }}/comment/{{ comment.0.id }}" />
    <link rel="replies" type="application/nss+xml" href="{{ config.host }}/xml/comment/{{ comment.0.id }}" />
</entry>
