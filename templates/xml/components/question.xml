<entry type="question">
    <id>{{ question.id }}</id>

    <author>
        {% let user = question.author.clone() %}
        {% include "xml/components/user.xml" %}
    </author>

    <content type="text/markdown">{{ question.content }}</content>
    <timestamp>{{ question.timestamp }}</timestamp>

    <link rel="alternate" type="text/html" href="{{ config.host }}/question/{{ question.id }}" />
</entry>
