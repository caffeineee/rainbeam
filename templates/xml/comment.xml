{% extends "./base.xml" %} {% block content %}
<title>{{ comment.0.id }}</title>
<link rel="alternate" type="text/html" hreflang="en" href="{{ config.host }}/comment/{{ comment.0.id }}" />
<description type="html">Comment reply feed</description>

<!-- comment -->
{% if let Some(reply) = comment.0.reply %}
{% let comment = (reply.clone(), 0, 0)  %}
{% include "xml/components/comment.xml" %}
{% else %}
{% include "xml/components/question.xml" %}

{% let comment_count = 0 %}
{% include "xml/components/response.xml" %}
{% endif %}

{% include "xml/components/comment.xml" %}

<!-- reactions -->
<subfeed name="reactions">
{% for reaction in reactions %}
    {% let user = reaction.user.clone() %}
    {% include "xml/components/user.xml" %}
{% endfor %}
</subfeed>
        
<!-- comments -->
<subfeed name="comments">
{% for comment in replies %}
    {% include "xml/components/comment.xml" %}
{% endfor %}
</subfeed>
{% call super() %} {% endblock %}
