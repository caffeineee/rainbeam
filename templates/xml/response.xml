{% extends "base.xml" %} {% block content %}
<title>{{ response.id }}</title>
<link rel="alternate" type="text/html" hreflang="en" href="{{ config.host }}/response/{{ response.id }}" />
<description type="html">Response feed</description>

<!-- response -->
{% include "xml/components/question.xml" %}

{% let comment_count = comments.len() %}
{% let reaction_count = reactions.len() %}
{% include "xml/components/response.xml" %}

<!-- reactions -->
<subfeed name="reactions">
{% for reaction in reactions %}
    {% let user = reaction.user.clone() %}
    {% include "xml/components/user.xml" %}
{% endfor %}
</subfeed>

<!-- comments -->
<subfeed name="comments">
{% for comment in comments %}
    {% include "xml/components/comment.xml" %}
{% endfor %}
</subfeed>
{% call super() %} {% endblock %}
